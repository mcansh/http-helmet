{
  "include": ["src"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "isolatedModules": true,
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "resolveJsonModule": true,

    "outDir": "dist",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true
  }
}

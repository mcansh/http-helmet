{
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "del dist",
    "predev": "pnpm run clean",
    "dev": "pnpm run --parallel --recursive dev",
    "prebuild": "pnpm run clean",
    "build": "pnpm run --recursive build",
    "test": "vitest",
    "prepublishOnly": "pnpm run build",
    "changeset": "changeset",
    "changeset:version": "changeset version && node ./scripts/remove-prerelease-changelogs.js && pnpm install --lockfile-only",
    "changeset:release": "pnpm run build && changeset publish",
    "format": "prettier --write . --ignore-path .gitignore --ignore-unknown"
  },
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh/)",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "example"
  ],
  "dependencies": {
    "@changesets/cli": "^2.27.1",
    "@manypkg/get-packages": "^2.2.0",
    "@types/node": "^20.10.4",
    "del-cli": "^5.1.0",
    "prettier": "^3.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}

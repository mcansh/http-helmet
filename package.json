{
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "del dist",
    "predev": "pnpm run clean",
    "dev": "pnpm run --parallel --recursive dev",
    "prebuild": "pnpm run clean",
    "build": "pnpm run --recursive build",
    "test": "pnpm --filter ./packages/* test --if-present",
    "publish": "./scripts/publish.js",
    "publint": "publint ./packages/**",
    "prepublishOnly": "pnpm run build",
    "changeset": "changeset",
    "changeset:version": "changeset version && node ./scripts/remove-prerelease-changelogs.js && pnpm install --lockfile-only",
    "changeset:release": "pnpm run build && changeset publish",
    "format": "prettier --cache --cache-location ./node_modules/.cache/.prettiercache --ignore-path .gitignore --write .",
    "validate": "run-p lint format publint typecheck",
    "typecheck": "pnpm run --recursive typecheck"
  },
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh/)",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "example"
  ],
  "dependencies": {
    "@changesets/cli": "^2.27.1",
    "@manypkg/get-packages": "^2.2.0",
    "@types/node": "^20.10.4",
    "chalk": "^5.3.0",
    "del-cli": "^5.1.0",
    "jsonfile": "^6.1.0",
    "prettier": "^3.1.1",
    "prompt-confirm": "^2.0.4",
    "semver": "^7.6.0",
    "tsup": "^8.0.1",
    "type-fest": "^4.9.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}

{
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "del dist",
    "predev": "pnpm run clean",
    "dev": "pnpm run --parallel --recursive dev",
    "prebuild": "pnpm run clean",
    "build": "pnpm run --recursive build",
    "test": "pnpm run --recursive --filter ./packages/* test --if-present",
    "lint": "pnpm run --recursive --filter ./packages/* lint --if-present",
    "publish": "./scripts/publish.js",
    "publint": "publint ./packages/**",
    "prepublishOnly": "pnpm run build",
    "changeset": "changeset",
    "changeset:version": "changeset version && node ./scripts/remove-prerelease-changelogs.js && pnpm install --lockfile-only",
    "changeset:release": "pnpm run build && changeset publish",
    "format": "prettier --cache --cache-location ./node_modules/.cache/.prettiercache --ignore-path .gitignore --write .",
    "validate": "run-p build lint format publint typecheck",
    "typecheck": "pnpm run --recursive --filter ./packages/* typecheck --if-present"
  },
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh/)",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "example"
  ],
  "dependencies": {
    "@changesets/cli": "^2.27.1",
    "@manypkg/get-packages": "^2.2.0",
    "@types/node": "^20.11.16",
    "chalk": "^5.3.0",
    "del-cli": "^5.1.0",
    "glob": "^10.3.10",
    "jsonfile": "^6.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prompt-confirm": "^2.0.4",
    "publint": "^0.2.7",
    "semver": "^7.6.0",
    "tsup": "^8.0.1",
    "type-fest": "^4.10.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}

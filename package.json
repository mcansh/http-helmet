{
  "private": true,
  "scripts": {
    "clean": "del dist",
    "prewatch": "pnpm run clean",
    "watch": "pnpm run --recursive watch",
    "prebuild": "pnpm run clean",
    "build": "pnpm run --recursive build",
    "test": "vitest",
    "prepublishOnly": "pnpm run build",
    "changeset": "changeset",
    "changeset:version": "changeset version && node ./scripts/remove-prerelease-changelogs.mjs && pnpm install --lockfile-only",
    "changeset:release": "pnpm run build && changeset publish",
    "format": "prettier --write . --ignore-path .gitignore --ignore-unknown"
  },
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh/)",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "example"
  ],
  "dependencies": {
    "@changesets/cli": "^2.26.2",
    "@manypkg/get-packages": "^2.2.0",
    "@types/node": "^20.8.9",
    "del-cli": "^5.1.0",
    "prettier": "^3.0.3",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  }
}
